@inherits System.Web.Mvc.WebViewPage<Our.Umbraco.DocTypeGridEditor.Web.PreviewModel>
@using Our.Umbraco.DocTypeGridEditor.Helpers
@using Our.Umbraco.DocTypeGridEditor.Web.Extensions
@{
    var id = Model.Values["id"];
    var editorAlias = Model.Values["editorAlias"];
    var contentTypeAlias = Model.Values["contentTypeAlias"];
    var value = Model.Values["value"];
    var viewPath = Model.Values["viewPath"];
    var previewViewPath = Model.Values["previewViewPath"];

    var content = DocTypeGridEditorHelper.ConvertValueToContent(id, contentTypeAlias, value);

    @Html.RenderDocTypeGridEditorItem(content, editorAlias, viewPath, previewViewPath)
}